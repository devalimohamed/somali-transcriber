{
  "expo": {
    "name": "SomTranscriber",
    "slug": "somtranscriber",
    "version": "0.1.0",
    "orientation": "portrait",
    "userInterfaceStyle": "light",
    "splash": {
      "resizeMode": "contain",
      "backgroundColor": "#f2efe7"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.somtranscriber.app",
      "infoPlist": {
        "NSMicrophoneUsageDescription": "SomTranscriber records voice notes for call summary transcription."
      }
    },
    "android": {
      "package": "com.somtranscriber.app",
      "permissions": [
        "RECORD_AUDIO"
      ]
    },
    "web": {
      "bundler": "metro"
    },
    "plugins": [
      "expo-asset"
    ]
  }
}
